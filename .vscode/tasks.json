{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Format",
			"type": "cargo",
			"command": "fmt"
		},
		{
			"label": "Lint",
			"dependsOn": "Format",
			"type": "cargo",
			"command": "clippy"
		},
		{
			"label": "Run",
			"dependsOn": "Format",
			"type": "cargo",
			"command": "run"
		},
		{
			"label": "Build",
			"dependsOn": "Format",
			"type": "cargo",
			"command": "build"
		},
		{
			"label": "Install Cross",
			"type": "cargo",
			"command": "install",
			"args": [
				"cross",
				"--git",
				"https://github.com/cross-rs/cross"
			]
		},
		{
			"label": "Cross-compile (Linux)",
			"dependsOn": [
				"Build",
				"Install Cross"
			],
			"type": "shell",
			"command": "cross",
			"args": [
				"build",
				"--target",
				"x86_64-unknown-linux-gnu",
				"--release"
			]
		},
		{
			"label": "Cross-compile (Windows)",
			"dependsOn": [
				"Build",
				"Install Cross"
			],
			"type": "shell",
			"command": "cross",
			"args": [
				"build",
				"--target",
				"x86_64-pc-windows-gnu",
				"--release"
			]
		},
		{
			"label": "Deploy (Linux)",
			"dependsOn": [
				"Cross-compile (Linux)",
				"Cross-compile (Windows)"
			],
			"type": "shell",
			"command": "./scripts/deploy-linux.sh"
		},
		{
			"label": "Deploy (Windows)",
			"dependsOn": [
				"Cross-compile (Linux)",
				"Cross-compile (Windows)"
			],
			"type": "shell",
			"command": ".\\scripts\\deploy-windows.bat",
		}
	]
}