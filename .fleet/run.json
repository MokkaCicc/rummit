{
	"configurations": [
		{
			"name": "Format",
			"type": "cargo",
			"cargoArgs": [
				"fmt"
			]
		},
		{
			"name": "Lint",
			"dependsOn": [
				"Format"
			],
			"type": "cargo",
			"cargoArgs": [
				"clippy"
			]
		},
		{
			"name": "Run",
			"dependsOn": [
				"Format"
			],
			"type": "cargo",
			"cargoArgs": [
				"run"
			]
		},
		{
			"name": "Build",
			"dependsOn": [
				"Format"
			],
			"type": "cargo",
			"cargoArgs": [
				"build"
			]
		},
		{
			"name": "Install Cross",
			"type": "cargo",
			"cargoArgs": [
				"install",
				"cross",
				"--git",
				"https://github.com/cross-rs/cross"
			]
		},
		{
			"name": "Cross-compile (Linux)",
			"dependsOn": [
				"Build",
				"Install Cross"
			],
			"type": "command",
			"program": "cross",
			"args": [
				"build",
				"--target",
				"x86_64-unknown-linux-gnu",
				"--release"
			]
		},
		{
			"name": "Cross-compile (Windows)",
			"dependsOn": [
				"Build",
				"Install Cross"
			],
			"type": "command",
			"program": "cross",
			"args": [
				"build",
				"--target",
				"x86_64-pc-windows-gnu",
				"--release"
			]
		},
		{
			"name": "Deploy (Linux)",
			"dependsOn": [
				"Cross-compile (Linux)",
				"Cross-compile (Windows)"
			],
			"type": "command",
			"program": "./scripts/deploy-linux.sh"
		},
		{
			"name": "Deploy (Windows)",
			"dependsOn": [
				"Cross-compile (Linux)",
				"Cross-compile (Windows)"
			],
			"type": "command",
			"program": ".\\scripts\\deploy-windows.bat"
		}
	]
}