{
	"configurations": [
		{
			"name": "Format",
			"type": "cargo",
			"cargoArgs": [
				"fmt"
			]
		},
		{
			"name": "Lint",
			"dependsOn": [
				"Format"
			],
			"type": "cargo",
			"cargoArgs": [
				"clippy"
			]
		},
		{
			"name": "Run",
			"dependsOn": [
				"Format"
			],
			"type": "cargo",
			"cargoArgs": [
				"run"
			]
		},
		{
			"name": "Build",
			"dependsOn": [
				"Format"
			],
			"type": "cargo",
			"cargoArgs": [
				"build"
			]
		},
		{
			"name": "Install Cross",
			"type": "cargo",
			"cargoArgs": [
				"install",
				"cross",
				"--git",
				"https://github.com/cross-rs/cross"
			]
		},
		{
			"name": "Cross-compile (Linux)",
			"dependsOn": [
				"Build",
				"Install Cross"
			],
			"type": "command",
			"program": "cross",
			"args": [
				"build",
				"--target",
				"x86_64-unknown-linux-gnu",
				"--release"
			]
		},
		{
			"name": "Cross-compile (Windows)",
			"dependsOn": [
				"Build",
				"Install Cross"
			],
			"type": "command",
			"program": "cross",
			"args": [
				"build",
				"--target",
				"x86_64-pc-windows-gnu",
				"--release"
			]
		},
		{
			"name": "Deploy (Linux)",
			"dependsOn": [
				"Cross-compile (Linux)",
				"Cross-compile (Windows)"
			],
			"type": "command",
			"program": "/bin/cp",
			"args": [
				"target/x86_64-unknown-linux-gnu/release/rummit",
				".githooks/rummit-linux",
				"&&",
				"target/x86_64-windows-pc-gnu/release/rummit.exe",
				".githooks/rummit-windows"
			]
		},
		{
			"name": "Deploy (Windows)",
			"dependsOn": [
				"Cross-compile (Linux)",
				"Cross-compile (Windows)"
			],
			"type": "command",
			"program": "cmd.exe",
			"args": [
				"/C",
				"copy",
				"target\\x86_64-unknown-linux-gnu\\release\\rummit",
				".githooks\\rummit-linux",
				"&&",
				"copy",
				"target\\x86_64-pc-windows-gnu\\release\\rummit.exe",
				".githooks\\rummit-windows"
			]
		}
	]
}